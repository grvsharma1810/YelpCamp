<% include ../partials/header %>
<div class="container">
        <h1 style="text-align:center" class="font-weight-bold mt-5">Add new comment <%=campground.name%></h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>        
</div>
</div>
<% include ../partials/footer %>